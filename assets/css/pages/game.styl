.game
	background #333
	color #fff
	padding-bottom 0.2em


.hand
	overflow-x scroll
	white-space nowrap
	
	&.waiting
		opacity 0.5
		
	

.roomName
	font-weight 100
	font-size 2em
	margin-bottom 1em
	padding 0.5em 1em
	border 1px solid rgba(255, 255, 255, 0.5)
	border-radius 5px
	background none
	width 140px
	display block
	text-align center
	color #fff
	font-family inherit
	

.notStarted, .gameOver
	position fixed
	top 50px
	left 0
	width 100%
	height calc(100vh - 50px)
	background #333
	z-index 9
	color #fff
	transition all 1s ease
	
	@extend .animated
	
	&.ng-hide-animate
		@extend .fadeOut


.win-card-1
	animation-delay -0.2s
.win-card-2
	animation-delay -0.2s
.win-card-3
	animation-delay -0.1s
.win-card-4
	animation-delay -0.5s
.win-card-5
	animation-delay -0.6s
.win-card-6
	animation-delay -0.8s