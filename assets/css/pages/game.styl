.game
	background #333
	color #fff
	padding-bottom 0.2em


.hand
	overflow-x scroll
	white-space nowrap
	text-align center
	
	&.waiting
		opacity 0.5
	
	.handle
		display none


.roomName
	font-weight 100
	font-size 2em
	margin-bottom 1em
	padding 0.5em 1em
	border 1px solid rgba(255, 255, 255, 0.5)
	border-radius 5px
	background none
	width 140px
	display block
	text-align center
	color #fff
	font-family inherit
	

.gameOver
	position fixed
	top 50px
	left 0
	width 100%
	height 100vh
	background #333
	z-index 9
	color #fff
	transition all 1s ease
	
	@extend .animated
	
	&.ng-hide-animate
		@extend .fadeOut


.win-card-1
	animation-delay -0.2s
.win-card-2
	animation-delay -0.2s
.win-card-3
	animation-delay -0.1s
.win-card-4
	animation-delay -0.5s
.win-card-5
	animation-delay -0.6s
.win-card-6
	animation-delay -0.8s
	

@keyframes plus-one
	0%
		opacity 0
		transform translateY(100px)
	50%
		opacity 1
	100%
		transform translateY(0px)


.scoreboard
	background #eee
	color #333
	padding 1em 0
	
	.player
		border-right 1px solid #aaa
		text-align center
		display block
		
		&:last-of-type
			border-right none
			
		&.winner
			position relative
			
			&:after
				content '+1'
				position absolute
				font-size 2em
				font-weight bold
				color #8BC34A
				top 300%
				left 0
				width 100%
				@extend .animated
				// @extend .tada
				animation-name plus-one
				animation-delay .5s

	.score
		border-radius 3px
		background #333
		color #eee
		padding 0.3em 0.6em
		margin-left 1em
	
	.judge
		font-weight bold
		
	.host
		text-decoration underline
		
	.roomName
		text-align center
		
		span
			border 1px solid rgba(0,0,0,0.2)
			padding 0.2em 0.4em
			border-radius 3px