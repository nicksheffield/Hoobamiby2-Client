@keyframes flyInLeft
	0%
		opacity 0
		transform translateX(-200px)
	100%
		opacity 1
		transform translateX(0)

@keyframes flyInRight
	0%
		opacity 0
		transform translateX(200px)
	100%
		opacity 1
		transform translateX(0)

.topbar
	background #333
	height 4em
	padding 0 1em
	
	.backBtn
		padding 0.5em
		transition background-color 0.3s ease
		cursor pointer
		
		&:hover
			background-color rgba(255, 255, 255, 0.3)


.nickname
	padding 1em
	color #fff


.startbox
	@extend .animated
	animation-duration 0.5s
	animation-name flyInLeft
	

.joinbox
	@extend .animated
	animation-duration 0.5s
	animation-name flyInRight