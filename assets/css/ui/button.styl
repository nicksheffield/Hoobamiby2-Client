.btn
	color #fff
	background #2196F3
	font-size 1em
	border 0
	paper-shadow 1
	padding 0.8em 1.6em
	border-radius 3px
	paper-transition box-shadow transform
	outline 0
	cursor pointer
	
	&[disabled]
		background #9E9E9E
		cursor default
		opacity 0.5
	
	&:hover
		paper-shadow 2
		
	&:active
		paper-shadow 1
		
	&:focus, &:focus:active
		outline 0
